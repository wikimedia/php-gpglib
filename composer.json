{
    "name": "wikimedia/gpglib",
    "description": "A wrapper around GPG for stateless operations.",
    "version": "0.2.0",
    "keywords": ["gpg", "encryption"],
    "license": "MIT",
    "authors": [
        {
            "name": "Gerg≈ë Tisza",
            "email": "tgr.huwiki@gmail.com"
        }
    ],
    "support": {
        "issues": "https://github.com/tgr/php-gpglib/issues",
        "source": "https://github.com/tgr/php-gpglib"
    },
    "require": {
        "psr/log": "1.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.8.*",
        "mediawiki/mediawiki-codesniffer": "^0.4.0",
        "jakub-onderka/php-console-highlighter": "0.*",
        "jakub-onderka/php-parallel-lint": "0.*",
        "phpdocumentor/phpdocumentor": "2.*"
    },
    "autoload": {
        "psr-4": {
            "GpgLib\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GpgLib\\Test\\": "test/"
        }
    },
    "scripts": {
        "test": [
            "parallel-lint src test",
            "phpunit test",
            "phpcs -p --standard=vendor/mediawiki/mediawiki-codesniffer/MediaWiki src"
        ],
        "build-doc": [
            "phpdoc -d ./src -t ./docs"
        ]
    }
}
